{
  "name": "yaya-send-email",
  "version": "1.0.0",
  "description": "Secure email sending function for Yaya Starchild website using Google Cloud",
  "main": "index.js",
  "scripts": {
    "deploy": "gcloud functions deploy sendEmail --gen2 --runtime=nodejs20 --region=us-central1 --source=. --entry-point=sendEmail --trigger-http --allow-unauthenticated --service-account=yaya-email-sender@yaya-starchild-email.iam.gserviceaccount.com --set-secrets='gmail-credentials=gmail-credentials:latest'",
    "test": "node test.js"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/secret-manager": "^5.0.1",
    "googleapis": "^126.0.0",
    "nodemailer": "^6.9.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
